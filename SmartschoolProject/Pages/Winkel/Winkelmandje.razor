<MatButton Unelevated="true" @onclick="@betaal">Betaal</MatButton>

@code{
    public double prijs;
    public List<double> prijzen { get; set; }
    public double totaalPrijs;

    protected override void OnInitialized()
    {
        prijzen = new List<double>();
    }


    public void betaal()
    {
        for (int i = 0; i < prijzen.Count(); i++)
        {
            totaalPrijs =+ prijzen.IndexOf(i);
        }
    }
}